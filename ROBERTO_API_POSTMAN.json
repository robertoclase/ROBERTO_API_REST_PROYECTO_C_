        },
        {
          "name": "2. Crear departamento",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Desarrollo\",\n  \"presupuesto\": 50000\n}"
            },
            "url": "http://localhost:8080/api/v1/departamentos"
          }
        },
        {
          "name": "3. Obtener departamento por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": "http://localhost:8080/api/v1/departamentos/1"
          }
        },
        {
          "name": "4. Actualizar departamento",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
